# Navigation
alias ls='ls -h'
alias ll='ls -lah'
alias la='ls -ah'
alias l='ls -lh'
alias ..='cd ..'
alias cd-='cd -'
alias cd--='cd ~ && cd -'

# Misc Helpers
alias fname="noglob find -name"
alias rake="noglob rake"
alias grep='noglob pcregrep --color=auto'
alias psg='ps ax | grep '
alias tf='tail -f'
alias enc='openssl enc -e -aes-256-cbc -salt -in '
alias dec='openssl enc -d -aes-256-cbc -in '

# Rails
alias ss='rails server'
alias ssd='rails server --debugger'
alias sc='rails console'
alias sdb='rails dbconsole'
alias gen='rails generate'

alias restart_rack='touch tmp/restart.txt'
alias arestart_rack='touch tmp/always_restart.txt'

# Git
alias git='noglob git'
alias gs='git status -sb'
alias gc='git commit'
alias gca='git commit -a'
alias gcam='git commit --amend'
alias glog='git log --pretty=format":%C(bold yellow)%h%C(bold blue)%d%Creset %s %C(white) %C(bold white)%an, %C(bold black)%ar%Creset"'
alias gl='glog --graph'
alias gla='glog --graph --all'
alias glp='glog -p'
alias glv='glog --graph --numstat'
alias grba='git rebase --abort'
alias grbc='git rebase --continue'
alias grb='git rebase -p'
alias gd='git diff'
alias gdw='git diff -w'
alias gds='git diff --stat'
alias gup='git up'
alias gp='git push'
alias gpt='git push --tags'
alias gpr='git pull --rebase'
alias gf='git fetch'
alias grh='git reset --hard'
alias stash='git stash'
alias unstash='git stash pop'
