# Navigation
alias ls='ls -h'
alias ll='ls -lah'
alias la='ls -ah'
alias l='ls -lh'
alias grep='grep --color=auto'
alias ..='cd ..'
alias cd-='cd -'
alias cd--='cd ~ && cd -'
alias psg='ps ax | grep '
alias pd=popd

# Common Directories
alias www='cd /var/www'
alias src='cd /usr/local/src'

# Misc Helpers
alias fname="noglob find -name"
alias rake="noglob rake"

# Rails
alias ss='rails server'
alias ssd='rails server --debugger'
alias sc='rails console'
alias sdb='rails dbconsole'
alias gen='rails generate'

alias restart_rack='touch tmp/restart.txt'
alias arestart_rack='touch tmp/always_restart.txt'

# Git
alias git='noglob git'
alias glog='git log --pretty="format:%C(yellow)%h%Cblue%d%Creset %s %C(bold black) %an, %ar%Creset"'
alias gl='glog --graph'
alias gla='gl --all'
alias gs='git status -sb'
alias gp='git push'
alias gpt='gp --tags'
alias grba='git rebase --abort'
alias grbc='git rebase --continue'
alias grh='git reset --hard'
alias gst='git stash'
alias gstp='git stash pop'
alias gw='git wtf'

# Misc
alias enc='openssl enc -e -aes-256-cbc -salt -in '
alias dec='openssl enc -d -aes-256-cbc -in '