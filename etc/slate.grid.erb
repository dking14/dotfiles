<%
  print("Enter grid size [Default: 12]: ")
  STDOUT.flush
  grid_size = STDIN.gets.chomp.to_i
  grid_size = 12 if grid_size <= 0
%>
# !!! AUTOGENERATED FILE - SEE slate.grid.erb !!!
#
# <%= grid_size %>x<%= grid_size %> Grid Framework for Slate Window Manager

alias column      screenSizeX/<%= grid_size %>
alias row         screenSizeY/<%= grid_size %>
alias top         screenOriginY
alias left        screenOriginX

# Row Spans
#   when "hightening" a window to Y rows (row-Y)
#
# Example:
#   # create a window that takes up 50% of the screen
#   resize ${span-6};${row-6}
<% 1.upto(grid_size) do |i| -%>
alias row-<%= i %>       ${row}*<%= i %>
<% end -%>
# Column Spans
#   when widening a window to X columns (span-X)
#
# Example:
#   # create a window that takes up 50% of the screen
#   resize ${span-6};${row-6}
<% 1.upto(grid_size) do |i| -%>
alias span-<%= i %>      ${column}*<%= i %>
<% end -%>

# Offsets for rows
#   when pushing a window Y rows from the top (drop-Y)
#
# Example:
#   # create a window that takes up 50% of the screen
#   resize ${span-6};${row-6}
<% 1.upto(grid_size) do |i| -%>
alias drop-<%= i %>      ${top}+(${row}*<%= i %>)
<% end -%>

# Offsets for columns
#   when pushing a window X columns from the left (push-X)
#
# Example:
#   # create a window that takes up the _right_ half of the screen
#   move ${push-6};0 ${span-6};${row-6}
<% 1.upto(grid_size) do |i| -%>
alias push-<%= i %>      ${left}+(${column}*<%= i %>)
<% end -%>