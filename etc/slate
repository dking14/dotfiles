# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000

# config windowHintsTopLeftX 20
# config windowHintsTopLeftY 20
config windowHintsIgnoreHiddenWindows false
config windowHintsShowIcons true
config windowHintsSpread true
config windowHintsRoundedCornerSize 10
config windowHintsSpreadSearchWidth 200
config windowHintsSpreadSearchHeight 200

# load our grid
source ~/.slate.grid if_exists

# Global Bindings

bind esc:cmd  hint
#bind esc:ctrl grid

# Nudge Bindings
bind right:ctrl;alt nudge +(${span-1})  +0
bind left:ctrl;alt  nudge -(${span-1})  +0
bind up:ctrl;alt    nudge +0            -(${row-1})
bind down:ctrl;alt  nudge +0            +(${row-1})

# Resize Bindings
bind right:ctrl;alt;cmd resize +213.33  +0
bind left:ctrl;alt;cmd  resize -213.33  +0
bind up:ctrl;alt;cmd    resize +0       -120
bind down:ctrl;alt;cmd  resize +0       +120

# Focus Bindings
# bind right:ctrl;alt;cmd    focus right
# bind left:ctrl;alt;cmd     focus left
# bind up:ctrl;alt;cmd       focus up
# bind down:ctrl;alt;cmd     focus down

# Monitor Aliases

alias mon-air      1680x1050
alias mon-imac     2560x1440

# Dev layout - 1

layout dev1 'Flint':MAIN_FIRST        move    0;0             ${span-3};${row-5}
layout dev1 'Google Chrome':REPEAT    move    ${push-3};0     ${span-5};${row-12}
layout dev1 'iTerm':REPEAT            move    0;${drop-5}     ${span-5};${row-7}
layout dev1 'Sublime Text 2':REPEAT   move    ${push-4};0     ${span-5}+100;${row-12}
layout dev1 'Sublime Text':REPEAT     move    ${push-4};0     ${span-5}+100;${row-12}
layout dev1 'Messages':MAIN_FIRST     move    ${push-9};0    ${span-3};${row-5}

bind 1:ctrl;alt;cmd layout dev1

# Dev layout - 2

layout dev2 'Google Chrome':REPEAT    move    0;0             ${span-4};${row-6}
layout dev2 'Sublime Text 2':REPEAT   move    ${push-4};0     ${span-5};${row-8}
layout dev2 'Sublime Text':REPEAT     move    ${push-4};0     ${span-5};${row-8}
layout dev2 'iTerm':MAIN_FIRST        move    0;${drop-6}     ${span-5};${row-6} | move ${push-4};${drop-9} ${span-5};${row-3}
layout dev2 'Flint':MAIN_FIRST        move    ${push-9};0     ${span-3};${row-5}
layout dev2 'Messages':MAIN_FIRST     move    ${push-9};${drop-5}     ${span-3};${row-5}

bind 2:ctrl;alt;cmd layout dev2

